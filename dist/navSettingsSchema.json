{
    "$id": "https://github.com/erwinel/SNImplementationDocs/blob/navSettingsSchemaV1.json",
    "type": "object",
    "definitions": {
        "INavConfigNamedNode": {
            "$id": "#/definitions/INavConfigNamedNode",
            "oneOf": [
                { "$ref": "#/definitions/INavConfigPageRef" },
                { "$ref": "#/definitions/INavConfigLink" }
            ]
        },
        "INavConfigNode": {
            "$id": "#/definitions/INavConfigNode",
            "oneOf": [
                { "$ref": "#/definitions/INavConfigNamedNode" },
                { "$ref": "#/definitions/INavConfigSeparator" }
            ]
        },
        "INavConfigNodeList": {
            "$id": "#/definitions/INavConfigNodeList",
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/definitions/INavConfigNode" }
        },
        "INavConfigPageRef": {
            "$id": "#/definitions/INavConfigPageRef",
            "required": [ "type", "name", "path" ],
            "properties": {
              "type": {
                "$id": "#/definitions/INavConfigPageRef/properties/type",
                "const": "page",
                "title": "Node type designation"
              },
              "id": {
                "$id": "#/definitions/INavConfigPageRef/properties/id",
                "type": "string",
                "title": "Programmatic Identifier"
              },
              "tooltip": {
                "$id": "#/definitions/INavConfigPageRef/properties/tooltip",
                "type": "string",
                "title": "Link Tooltip"
              },
              "name": {
                "$id": "#/definitions/INavConfigPageRef/properties/name",
                  "type": "string",
                  "minLength": 1,
                  "title": "Relative path to page"
              },
              "path": {
                "$id": "#/definitions/INavConfigPageRef/properties/path",
                  "type": "string",
                  "uri-reference": true,
                  "title": "Relative path to page"
              },
              "heading": {
                "$id": "#/definitions/INavConfigPageRef/properties/heading",
                "type": "string",
                "title": "Page Heading"
              },
              "subHeading": {
                "$id": "#/definitions/INavConfigPageRef/properties/subHeading",
                "type": "string",
                "title": "Page Sub-heading"
              },
              "hiddenIds": {
                "$id": "#/definitions/INavConfigPageRef/properties/hiddenIds",
                "type": "array",
                "items": { "type": "string" },
                "title": "IDs of parent navigation items to be hidden when this represents the active page"
              },
              "navBar": {
                "$id": "#/definitions/INavConfigPageRef/properties/navBar",
                  "$ref": "#/definitions/INavConfigNodeList",
                  "title": "Navigation items to append to the top navigation bar when this represents the active page"
              },
              "sideBar": {
                "$id": "#/definitions/INavConfigPageRef/properties/sideBar",
                  "$ref": "#/definitions/INavConfigNodeList",
                  "title": "Navigation items to append to the side navigation bar when this represents the active page"
              }
            },
            "additionalProperties": false
        },
        "INavConfigLink": {
            "$id": "#/definitions/INavConfigLink",
            "required": [ "type", "name", "url" ],
            "properties": {
                "type": {
                    "$id": "#/definitions/INavConfigLink/properties/type",
                    "const": "link",
                    "title": "Node type designation"
                },
                "name": {
                  "$id": "#/definitions/INavConfigLink/properties/name",
                    "type": "string",
                    "minLength": 1,
                    "title": "Relative path to page"
                },
                "id": {
                    "$id": "#/definitions/INavConfigLink/properties/id",
                  "type": "string",
                  "title": "Programmatic Identifier"
                },
                "tooltip": {
                    "$id": "#/definitions/INavConfigLink/properties/tooltip",
                  "type": "string",
                  "title": "Link Tooltip"
                },
                "url": {
                    "$id": "#/definitions/INavConfigLink/properties/url",
                    "type": "string",
                    "uri": true,
                    "title": "Menu item url"
                }
            },
            "additionalProperties": false
        },
        "INavConfigSeparator": {
            "$id": "#/definitions/INavConfigSeparator",
            "type": "object",
            "required": [ "type" ],
            "properties": {
              "type": { "$id": "#/definitions/INavConfigSeparator/properties/type", "const": "separator", "title": "Node type designation" }
            },
            "additionalProperties": false
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "navBar": {
      "$id": "#/navBar",
        "$ref": "#/definitions/INavConfigNodeList",
        "title": "Global navigation items for the top navigation bar"
    },
    "sideBar": {
      "$id": "#/sideBar",
        "$ref": "#/definitions/INavConfigNodeList",
        "title": "Global navigation items for the side navigation bar"
    }
  }